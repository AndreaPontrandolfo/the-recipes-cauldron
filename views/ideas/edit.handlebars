<div class="container">
    <div class="card card-body">
        <h3>Edit Recipe</h3>
        <form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
            {{!-- <input type="hidden" name="_method" value="PUT"> --}}
            {{!-- non serve --}}
            <div class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" name="title" aria-describedby="helpId" value="{{idea.title}}">
            </div>
            <div class="form-group">
                <label for="details">Details</label>
                <textarea class="form-control" name="details" aria-describedby="helpId">{{idea.details}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>